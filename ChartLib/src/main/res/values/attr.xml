<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StepProgress">
        <attr name="spProgressBarHeight" format="dimension"/>
        <attr name="spInactiveColor" format="color"/>
        <attr name="spActiveColor" format="color"/>
        <attr name="spMax" format="integer"/>
        <attr name="spProgress" format="integer"/>
        <attr name="spIconSize" format="dimension"/>
        <attr name="spIconMargin" format="dimension"/>
        <attr name="spIconDrawable" format="reference"/>
    </declare-styleable>

    <attr name="chartBottomMargin" format="dimension"/>
    <attr name="chartLeftMargin" format="dimension"/>
    <attr name="axisTextColor" format="color"/>
    <attr name="axisTextSize" format="dimension"/>
    <attr name="axisLineColor" format="color"/>
    <attr name="axisLineWidth" format="dimension"/>
    <attr name="touchLineColor" format="dimension"/>
    <attr name="infoLayout" format="reference"/>
    <attr name="dotRadius" format="dimension"/>
    <attr name="dotSelectedRadius" format="dimension"/>
    <attr name="infoPos" format="enum">
        <enum name="top" value="0"/>
        <enum name="above" value="1"/>
    </attr>
    <attr name="infoPadding" format="dimension"/>

    <declare-styleable name="BarChart">
        <attr name="chartBottomMargin"/>
        <attr name="chartLeftMargin"/>
        <attr name="axisTextColor"/>
        <attr name="axisTextSize"/>
        <attr name="axisLineColor"/>
        <attr name="axisLineWidth"/>
        <attr name="barUnreachedColor" format="color" />
        <attr name="barColor" format="color" />
        <attr name="stackBarColor" format="color"/>
        <attr name="barMaxWidth" format="dimension" />
        <attr name="barMinWidth" format="dimension" />
        <attr name="touchLineColor"/>
        <attr name="targetLineColor" format="color"/>
        <attr name="infoLayout"/>
        <attr name="infoPos"/>
        <attr name="infoPadding"/>
    </declare-styleable>


    <declare-styleable name="LineChart">
        <attr name="chartBottomMargin"/>
        <attr name="chartLeftMargin" />
        <attr name="axisTextColor"/>
        <attr name="axisTextSize" />
        <attr name="axisLineColor"/>
        <attr name="axisLineWidth"/>
        <attr name="lineColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="dotRadius"/>
        <attr name="dotSelectedRadius"/>
        <attr name="touchLineColor" />
        <attr name="infoLayout"/>
        <attr name="infoPos"/>
        <attr name="infoPadding"/>
    </declare-styleable>

    <declare-styleable name="TimeIntervalLineChart">
        <attr name="chartBottomMargin"/>
        <attr name="chartLeftMargin" />
        <attr name="axisTextColor"/>
        <attr name="axisTextSize" />
        <attr name="axisLineColor"/>
        <attr name="axisLineWidth"/>
        <attr name="startDotColor" format="color"/>
        <attr name="endDotColor" format="color"/>
        <attr name="dotRadius"/>
        <attr name="dotSelectedRadius"/>
        <attr name="touchLineColor" />
        <attr name="infoLayout"/>
        <attr name="infoPos"/>
        <attr name="infoPadding"/>
    </declare-styleable>

    <declare-styleable name="HealthRangeView">
        <attr name="barHeight"  format="dimension"/>
        <attr name="dotRadius"/>
        <attr name="rangeTextSize" format="dimension" />
        <attr name="rangeLabelTextSize" format="dimension" />
        <attr name="textPadding" format="dimension" />
        <attr name="android:textColor" />
        <attr name="label1Text" format="string" />
        <attr name="label2Text" format="string" />
        <attr name="label3Text" format="string" />
        <attr name="label4Text" format="string" />
    </declare-styleable>
</resources>